generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  isBlocked Boolean  @default(false)
  role      UserRole @default(USER)
  account   Account?
}

model Account {
  id        Int      @id @default(autoincrement())
  balance   Decimal
  currency  String
  isActive  Boolean
  createdAt DateTime @default(now())
  userId    Int      @unique
  deposit   Deposit?
  user      User     @relation(fields: [userId], references: [id])
}

model Deposit {
  id        Int      @id @default(autoincrement())
  amount    Decimal
  rate      Int
  startDate DateTime
  endDate   DateTime
  isActive  Boolean
  accountId Int      @unique
  Account   Account  @relation(fields: [accountId], references: [id])
}

model Transaction {
  id              Int              @id @default(autoincrement())
  accountId       Int
  currency        String
  amount          Decimal
  date            DateTime         @default(now())
  targetAccountId Int?
  type            TransactionsType
}

enum TransactionsType {
  DEPOSIT
  WITHDRAWAL
  TRANSFER
}

enum UserRole {
  USER
  ADMIN
}
